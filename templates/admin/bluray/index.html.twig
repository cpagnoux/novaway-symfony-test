{% extends 'base.html.twig' %}

{% block title %}Bluray index{% endblock %}

{% block body %}
    <h1>Bluray index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Isan</th>
                <th>Title</th>
                <th>ReleaseDate</th>
                <th>Duration</th>
                <th>Storyline</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bluray in blurays %}
            <tr>
                <td>{{ bluray.id }}</td>
                <td>{{ bluray.isan }}</td>
                <td>{{ bluray.title }}</td>
                <td>{{ bluray.releaseDate ? bluray.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bluray.duration }}</td>
                <td>{{ bluray.storyline }}</td>
                <td>{{ bluray.price }}</td>
                <td>
                    <a href="{{ path('bluray_show', {'id': bluray.id}) }}">show</a>
                    <a href="{{ path('bluray_edit', {'id': bluray.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bluray_new') }}">Create new</a>
{% endblock %}
